@page
@model Ecommerce.Pages.Admin.Bugs.DeleteModel

<form method="post">
	<input hidden asp-for="Bug.Id"/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Category</h2>
			<hr/>
		</div>
		<div class="mb-3">
			<label asp-for="Bug.Name"></label>
			<input asp-for="Bug.Name" disabled class="form-control"/>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
		<a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
